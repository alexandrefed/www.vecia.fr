---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ui } from '../../i18n/ui';

const lang = 'en';
const t = ui[lang];
---

<BaseLayout
  title={t['aiethics.meta.title']}
  description={t['aiethics.meta.description']}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden bg-gradient-to-br from-primary/10 via-secondary/10 to-accent1/10">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-4">
          {t['aiethics.hero.title']}
        </h1>
        <p class="text-xl md:text-2xl text-gray-600">
          {t['aiethics.hero.subtitle']}
        </p>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <p class="text-xl text-gray-700 leading-relaxed text-center">
          {t['aiethics.intro.text']}
        </p>
      </div>
    </div>
  </section>

  <!-- Section 1: Fundamental Principles -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-12 text-center">
          {t['aiethics.section1.title']}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Human-Centered -->
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-heading font-bold mb-3">{t['aiethics.section1.human.title']}</h3>
            <p class="text-gray-700">{t['aiethics.section1.human.description']}</p>
          </div>

          <!-- Transparency -->
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-gradient-to-br from-secondary to-accent1 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-heading font-bold mb-3">{t['aiethics.section1.transparency.title']}</h3>
            <p class="text-gray-700">{t['aiethics.section1.transparency.description']}</p>
          </div>

          <!-- Accountability -->
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-gradient-to-br from-accent1 to-accent2 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-heading font-bold mb-3">{t['aiethics.section1.accountability.title']}</h3>
            <p class="text-gray-700">{t['aiethics.section1.accountability.description']}</p>
          </div>

          <!-- Fairness -->
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="w-12 h-12 bg-gradient-to-br from-accent2 to-primary rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
              </svg>
            </div>
            <h3 class="text-2xl font-heading font-bold mb-3">{t['aiethics.section1.fairness.title']}</h3>
            <p class="text-gray-700">{t['aiethics.section1.fairness.description']}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sections 2-9: Content Sections -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto prose prose-lg">
        <!-- Section 2 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section2.title']}</h2>
        <p>{t['aiethics.section2.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section2.li1']}</li>
          <li>{t['aiethics.section2.li2']}</li>
          <li>{t['aiethics.section2.li3']}</li>
          <li>{t['aiethics.section2.li4']}</li>
          <li>{t['aiethics.section2.li5']}</li>
        </ul>

        <!-- Section 3 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section3.title']}</h2>
        <p>{t['aiethics.section3.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section3.li1']}</li>
          <li>{t['aiethics.section3.li2']}</li>
          <li>{t['aiethics.section3.li3']}</li>
          <li>{t['aiethics.section3.li4']}</li>
          <li>{t['aiethics.section3.li5']}</li>
        </ul>

        <!-- Section 4 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section4.title']}</h2>
        <p>{t['aiethics.section4.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section4.li1']}</li>
          <li>{t['aiethics.section4.li2']}</li>
          <li>{t['aiethics.section4.li3']}</li>
          <li>{t['aiethics.section4.li4']}</li>
        </ul>

        <!-- Section 5 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section5.title']}</h2>
        <p>{t['aiethics.section5.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section5.li1']}</li>
          <li>{t['aiethics.section5.li2']}</li>
          <li>{t['aiethics.section5.li3']}</li>
          <li>{t['aiethics.section5.li4']}</li>
        </ul>

        <!-- Section 6 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section6.title']}</h2>
        <p>{t['aiethics.section6.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section6.li1']}</li>
          <li>{t['aiethics.section6.li2']}</li>
          <li>{t['aiethics.section6.li3']}</li>
          <li>{t['aiethics.section6.li4']}</li>
        </ul>

        <!-- Section 7 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section7.title']}</h2>
        <p>{t['aiethics.section7.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section7.li1']}</li>
          <li>{t['aiethics.section7.li2']}</li>
          <li>{t['aiethics.section7.li3']}</li>
          <li>{t['aiethics.section7.li4']}</li>
        </ul>

        <!-- Section 8 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section8.title']}</h2>
        <p>{t['aiethics.section8.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section8.li1']}</li>
          <li>{t['aiethics.section8.li2']}</li>
          <li>{t['aiethics.section8.li3']}</li>
        </ul>

        <!-- Section 9 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section9.title']}</h2>
        <p>{t['aiethics.section9.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['aiethics.section9.li1']}</li>
          <li>{t['aiethics.section9.li2']}</li>
          <li>{t['aiethics.section9.li3']}</li>
        </ul>

        <!-- Section 10: Contact -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['aiethics.section10.title']}</h2>
        <p>{t['aiethics.section10.p1']}</p>
        <div class="bg-gray-50 p-6 rounded-lg mt-4">
          <p class="mb-2"><strong>{t['aiethics.contact.email']}</strong></p>
          <p><strong>{t['aiethics.contact.address']}</strong></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Commitment Banner -->
  <section class="py-12 bg-gradient-to-r from-secondary to-accent1">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center text-white">
        <p class="text-xl font-medium">
          {t['aiethics.commitment']}
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @import "tailwindcss";

  .prose {
    max-width: 100%;
  }
  .prose p {
    @apply text-gray-700 leading-relaxed mb-4;
  }
  .prose ul {
    @apply mb-6;
  }
  .prose li {
    @apply text-gray-700;
  }
</style>
