---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ui } from '../i18n/ui';

const lang = 'fr';
const t = ui[lang];
---

<BaseLayout
  title={t['terms.meta.title']}
  description={t['terms.meta.description']}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-primary/5 to-secondary/5">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
          {t['terms.hero.title']}
        </h1>
        <p class="text-lg text-muted">
          {t['terms.hero.subtitle']}
        </p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto prose prose-lg">
        <p class="lead text-xl text-muted mb-12">
          {t['terms.intro.text']}
        </p>

        <!-- Section 1 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section1.title']}</h2>
        <p>{t['terms.section1.p1']}</p>

        <!-- Section 2 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section2.title']}</h2>
        <p>{t['terms.section2.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['terms.section2.li1']}</li>
          <li>{t['terms.section2.li2']}</li>
          <li>{t['terms.section2.li3']}</li>
          <li>{t['terms.section2.li4']}</li>
        </ul>

        <!-- Section 3 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section3.title']}</h2>
        <p>{t['terms.section3.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['terms.section3.li1']}</li>
          <li>{t['terms.section3.li2']}</li>
          <li>{t['terms.section3.li3']}</li>
          <li>{t['terms.section3.li4']}</li>
        </ul>

        <!-- Section 4 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section4.title']}</h2>
        <p>{t['terms.section4.p1']}</p>
        <p>{t['terms.section4.p2']}</p>

        <!-- Section 5 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section5.title']}</h2>
        <p>{t['terms.section5.p1']}</p>

        <!-- Section 6 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section6.title']}</h2>
        <p>{t['terms.section6.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['terms.section6.li1']}</li>
          <li>{t['terms.section6.li2']}</li>
          <li>{t['terms.section6.li3']}</li>
        </ul>

        <!-- Section 7 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section7.title']}</h2>
        <p>{t['terms.section7.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['terms.section7.li1']}</li>
          <li>{t['terms.section7.li2']}</li>
          <li>{t['terms.section7.li3']}</li>
        </ul>

        <!-- Section 8 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section8.title']}</h2>
        <p>{t['terms.section8.p1']}</p>
        <ul class="list-disc pl-6 space-y-2">
          <li>{t['terms.section8.li1']}</li>
          <li>{t['terms.section8.li2']}</li>
          <li>{t['terms.section8.li3']}</li>
        </ul>

        <!-- Section 9 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section9.title']}</h2>
        <p>{t['terms.section9.p1']}</p>

        <!-- Section 10 -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section10.title']}</h2>
        <p>{t['terms.section10.p1']}</p>

        <!-- Section 11: Contact -->
        <h2 class="text-3xl font-heading font-bold mt-12 mb-6">{t['terms.section11.title']}</h2>
        <p>{t['terms.section11.p1']}</p>
        <div class="bg-gray-50 p-6 rounded-lg mt-4">
          <p class="mb-2"><strong>{t['terms.contact.email']}</strong></p>
          <p class="mb-2"><strong>{t['terms.contact.address']}</strong></p>
          <p><strong>{t['terms.contact.phone']}</strong></p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @import "tailwindcss";

  .prose {
    max-width: 100%;
  }
  .prose p {
    @apply text-muted leading-relaxed mb-4;
  }
  .prose ul {
    @apply mb-6;
  }
  .prose li {
    @apply text-muted;
  }
</style>
