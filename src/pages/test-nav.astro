---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navigation Test - Vecia</title>
  <link rel="icon" type="image/png" href="/vecia_favicon.png">
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js" defer></script>
</head>
<body class="font-body text-text bg-background">
  <Navigation lang="fr" />

  <!-- Spacer for fixed nav -->
  <div class="h-20"></div>

  <!-- Test Content -->
  <div class="container mx-auto px-6 py-20">
    <h1 class="text-4xl font-heading font-bold mb-6">Navigation Component Test</h1>

    <div class="space-y-4 text-lg">
      <p>✅ Desktop navigation with logo</p>
      <p>✅ Language switcher dropdown (Alpine.js)</p>
      <p>✅ Mobile hamburger menu</p>
      <p>✅ CTA button with gradient</p>
      <p>✅ Responsive design</p>
    </div>

    <div class="mt-12 p-6 bg-accent3 rounded-lg">
      <h2 class="text-2xl font-heading font-bold mb-4">Test Instructions:</h2>
      <ol class="list-decimal list-inside space-y-2">
        <li>Resize browser to test responsive behavior</li>
        <li>Click language dropdown to see Alpine.js animation</li>
        <li>Click outside dropdown to test @click.outside directive</li>
        <li>Test mobile menu on small screens</li>
        <li>Verify gradient hover effects on buttons</li>
      </ol>
    </div>

    <!-- Scroll content to test fixed nav -->
    <div class="mt-20 space-y-8">
      <p class="text-gray-600">Scroll down to test fixed navigation...</p>
      {Array.from({ length: 20 }).map((_, i) => (
        <p class="text-gray-400">Scroll content line {i + 1}</p>
      ))}
    </div>
  </div>
</body>
</html>
