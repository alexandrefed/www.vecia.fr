---
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Footer V1 Test | Vecia</title>
  <link rel="stylesheet" href="/src/styles/global.css">
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-white">
  <!-- Spacer to push footer down -->
  <div class="min-h-screen flex flex-col justify-between">
    <main class="flex-1 flex items-center justify-center">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-[--color-text] mb-4">Footer V1 Test Page</h1>
        <p class="text-muted mb-8">Scroll down to see the minimalist footer component</p>
        <div class="flex gap-4 justify-center">
          <a href="/fr" class="px-6 py-3 bg-[--color-primary] text-white rounded-full hover:opacity-90 transition-opacity">
            Test French Version
          </a>
          <a href="/en" class="px-6 py-3 bg-[--color-secondary] text-white rounded-full hover:opacity-90 transition-opacity">
            Test English Version
          </a>
        </div>
      </div>
    </main>

    <!-- Footer Component -->
    <Footer />
  </div>
</body>
</html>
