---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ui } from '../i18n/ui';

const lang = 'fr';
const t = ui[lang];
---

<BaseLayout
  title={t['about.meta.title']}
  description={t['about.meta.description']}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-accent1/5"></div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6">
          {t['about.hero.headline']}
        </h1>
        <p class="text-xl md:text-2xl text-muted">
          {t['about.hero.subheadline']}
        </p>
      </div>
    </div>
  </section>

  <!-- Mission/Story Section -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-8 text-center">
          <span class="title-icon"></span>{t['about.story.title']}
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Text content -->
          <div class="space-y-6 text-lg text-muted leading-relaxed text-justify">
            <p class="text-xl font-medium text-text">
              {t['about.story.intro']}
            </p>

            <p>
              {t['about.story.paragraph1']}
            </p>

            <p>
              {t['about.story.paragraph2']}
            </p>
          </div>

          <!-- Image -->
          <div class="flex justify-center lg:justify-end">
            <div class="aspect-square rounded-3xl overflow-hidden bg-gradient-to-br from-primary/20 via-accent1/15 to-secondary/20 shadow-xl max-w-md">
              <img
                src="/images/about-us/mission-handshake.png"
                alt="Mission Vecia"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
            <span class="title-icon"></span>{t['about.values.title']}
          </h2>
          <p class="text-lg text-muted">
            {t['about.values.subtitle']}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Innovation -->
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">{t['about.values.innovation.title']}</h3>
            <p class="text-muted">{t['about.values.innovation.description']}</p>
          </div>

          <!-- Excellence -->
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-gradient-to-br from-secondary to-accent1 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">{t['about.values.excellence.title']}</h3>
            <p class="text-muted">{t['about.values.excellence.description']}</p>
          </div>

          <!-- Partnership -->
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-gradient-to-br from-accent1 to-accent2 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">{t['about.values.partnership.title']}</h3>
            <p class="text-muted">{t['about.values.partnership.description']}</p>
          </div>

          <!-- Impact -->
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-gradient-to-br from-accent2 to-primary rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-bold mb-2">{t['about.values.impact.title']}</h3>
            <p class="text-muted">{t['about.values.impact.description']}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-heading font-bold text-primary mb-2">
              30%
            </div>
            <p class="text-muted">{t['about.stats.productivity']}</p>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-heading font-bold text-secondary mb-2">
              280%
            </div>
            <p class="text-muted">{t['about.stats.roi']}</p>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-heading font-bold text-accent1 mb-2">
              50+
            </div>
            <p class="text-muted">{t['about.stats.clients']}</p>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-heading font-bold text-accent2 mb-2">
              24/7
            </div>
            <p class="text-muted">{t['about.stats.availability']}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
            <span class="title-icon"></span>{t['about.team.title']}
          </h2>
          <p class="text-lg text-muted">
            {t['about.team.subtitle']}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
          <!-- Alexandre Fedotov -->
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            <div class="aspect-square overflow-hidden">
              <img
                src="/images/about-us/alexandre-fedotov.jpg"
                alt="Alexandre Fedotov"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-8 text-center">
              <h3 class="text-2xl font-heading font-bold mb-2">
                {t['about.team.alexandre.name']}
              </h3>
              <p class="text-primary font-medium mb-4">
                {t['about.team.alexandre.role']}
              </p>
              <p class="text-muted mb-6">
                {t['about.team.alexandre.bio']}
              </p>
              <a
                href={t['about.team.alexandre.linkedin']}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-primary hover:text-secondary transition-colors underline decoration-primary/30 hover:decoration-secondary underline-offset-2"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                Voir le profil LinkedIn
              </a>
            </div>
          </div>

          <!-- Tanguy Dray -->
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            <div class="aspect-square overflow-hidden">
              <img
                src="/images/about-us/tanguy-dray.jpg"
                alt="Tanguy Dray"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-8 text-center">
              <h3 class="text-2xl font-heading font-bold mb-2">
                {t['about.team.tanguy.name']}
              </h3>
              <p class="text-primary font-medium mb-4">
                {t['about.team.tanguy.role']}
              </p>
              <p class="text-muted mb-6">
                {t['about.team.tanguy.bio']}
              </p>
              <a
                href={t['about.team.tanguy.linkedin']}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-primary hover:text-secondary transition-colors underline decoration-primary/30 hover:decoration-secondary underline-offset-2"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                Voir le profil LinkedIn
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-secondary to-accent1">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">
          <span class="title-icon"></span>{t['about.cta.headline']}
        </h2>
        <p class="text-xl mb-8 opacity-90">
          {t['about.cta.body']}
        </p>
        <a
          href="/contact"
          class="inline-block bg-white text-secondary px-8 py-4 rounded-lg font-bold text-lg hover:shadow-xl hover:-translate-y-1 transition-all"
        >
          {t['about.cta.button']}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
