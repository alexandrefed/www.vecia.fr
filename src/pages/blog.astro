---
/**
 * French Blog Homepage
 *
 * Features:
 * - Featured article (large card with image)
 * - Article grid (3 columns desktop, 1 mobile)
 * - Category filter pills (Alpine.js)
 * - Search bar (client-side filtering)
 * - BlogSidebar (30% width desktop)
 * - Reading time badges
 * - Responsive design
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogSidebar from '../components/blog/BlogSidebar.astro';
import StructuredData from '../components/seo/StructuredData.astro';

const lang = 'fr';

// Fetch all French blog posts
const allPosts = await getCollection('blog', ({ id }) => {
  return id.startsWith('fr/');
});

// Sort by publish date (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Get featured post (first one marked as featured, or latest post)
const featuredPost = sortedPosts.find(post => post.data.featured) || sortedPosts[0];

// Get regular posts (excluding featured)
const regularPosts = sortedPosts.filter(post => post.id !== featuredPost.id);

// Extract unique categories for filter
const categories = [
  ...new Set(sortedPosts.map(post => post.data.category))
] as Array<'why-broken' | 'success-stories' | 'quick-wins' | 'industry-deep-dives' | 'tool-comparisons'>;

// Category translations
const categoryLabels = {
  'why-broken': 'Pourquoi Cassé',
  'success-stories': 'Succès Client',
  'quick-wins': 'Victoires Rapides',
  'industry-deep-dives': 'Analyses Sectorielles',
  'tool-comparisons': 'Comparaisons d\'Outils'
};

// Calculate reading time for a post
function calculateReadingTime(content: string): number {
  const wordCount = content.split(/\s+/).length;
  return Math.ceil(wordCount / 200); // 200 words per minute
}

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Page metadata
const pageTitle = 'Blog Vecia - Automatisation IA & Conseils Business';
const pageDescription = 'Découvrez nos articles sur l\'automatisation IA, les meilleures pratiques business et les cas d\'usage concrets pour transformer votre entreprise.';

// Breadcrumb structured data for SEO
const breadcrumbData = {
  items: [
    { name: 'Accueil', url: 'https://vecia.com/' },
    { name: 'Blog', url: 'https://vecia.com/blog/' }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang}>
  <StructuredData slot="head" type="breadcrumb" data={breadcrumbData} />
  <!-- Blog Hero Section -->
  <section class="bg-gradient-to-br from-accent3 via-white to-accent1/20 pt-32 pb-16">
    <div class="container mx-auto px-4 md:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-text mb-6">
          Blog <span class="text-primary">Vecia</span>
        </h1>
        <p class="text-xl text-text leading-relaxed max-w-2xl mx-auto">
          Conseils d'automatisation IA, cas d'usage et meilleures pratiques pour transformer votre entreprise
        </p>
      </div>
    </div>
  </section>

  <!-- Main Blog Content -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content (70%) -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Featured Article -->
          {featuredPost && (
            <article class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 group">
              <a href={`/blog/${featuredPost.id.replace('fr/', '')}`} class="block">
                <!-- Featured Badge -->
                <div class="bg-gradient-to-r from-primary to-secondary p-4">
                  <span class="text-white font-bold text-sm uppercase tracking-wide">
                    ⭐ Article en Vedette
                  </span>
                </div>

                <!-- Featured Image Placeholder (if image exists) -->
                {featuredPost.data.image && (
                  <div class="aspect-video bg-gradient-to-br from-primary/20 to-secondary/20 relative overflow-hidden">
                    <img
                      src={featuredPost.data.image}
                      alt={featuredPost.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="eager"
                    />
                  </div>
                )}

                <!-- Content -->
                <div class="p-8">
                  <!-- Category Badge -->
                  <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-primary/10 text-primary border border-primary/20 mb-4">
                    {categoryLabels[featuredPost.data.category]}
                  </span>

                  <!-- Title -->
                  <h2 class="text-3xl font-heading font-bold text-text mb-4 group-hover:text-primary transition-colors">
                    {featuredPost.data.title}
                  </h2>

                  <!-- Description -->
                  <p class="text-lg text-text leading-relaxed mb-6">
                    {featuredPost.data.description}
                  </p>

                  <!-- Meta Info -->
                  <div class="flex flex-wrap items-center gap-4 text-sm text-muted">
                    <span class="flex items-center">
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                      </svg>
                      {featuredPost.data.author}
                    </span>
                    <span>•</span>
                    <time>{formatDate(featuredPost.data.publishDate)}</time>
                    <span>•</span>
                    <span class="flex items-center">
                      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {calculateReadingTime(featuredPost.body)} min
                    </span>
                  </div>
                </div>
              </a>
            </article>
          )}

          <!-- Search & Filter Section -->
          <div
            x-data="{
              searchQuery: '',
              selectedCategory: 'all',
              posts: [],
              filteredPosts: [],

              init() {
                this.posts = Array.from(document.querySelectorAll('[data-post]')).map(el => ({
                  element: el,
                  title: el.dataset.title.toLowerCase(),
                  description: el.dataset.description.toLowerCase(),
                  category: el.dataset.category
                }));
                this.filterPosts();
              },

              filterPosts() {
                const query = this.searchQuery.toLowerCase();

                this.posts.forEach(post => {
                  const matchesSearch = !query ||
                    post.title.includes(query) ||
                    post.description.includes(query);

                  const matchesCategory = this.selectedCategory === 'all' ||
                    post.category === this.selectedCategory;

                  if (matchesSearch && matchesCategory) {
                    post.element.style.display = 'block';
                  } else {
                    post.element.style.display = 'none';
                  }
                });

                this.updateResultsCount();
              },

              updateResultsCount() {
                const visible = this.posts.filter(p => p.element.style.display !== 'none').length;
                document.getElementById('results-count').textContent = visible;
              }
            }"
            class="space-y-4"
          >
            <!-- Search Bar -->
            <div class="relative">
              <input
                type="text"
                x-model="searchQuery"
                @input="filterPosts()"
                placeholder="Rechercher un article..."
                class="w-full px-6 py-4 pl-14 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent shadow-sm"
              />
              <svg class="absolute left-5 top-1/2 -translate-y-1/2 w-5 h-5 text-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>

            <!-- Category Filters -->
            <div class="flex flex-wrap gap-2">
              <button
                @click="selectedCategory = 'all'; filterPosts()"
                :class="selectedCategory === 'all' ? 'bg-primary text-white' : 'bg-white text-text hover:bg-gray-100'"
                class="px-4 py-2 rounded-lg font-semibold text-sm border border-gray-200 transition-all"
              >
                Tous
              </button>
              {categories.map(category => (
                <button
                  x-on:click={`selectedCategory = '${category}'; filterPosts()`}
                  x-bind:class={`selectedCategory === '${category}' ? 'bg-primary text-white' : 'bg-white text-text hover:bg-gray-100'`}
                  class="px-4 py-2 rounded-lg font-semibold text-sm border border-gray-200 transition-all"
                >
                  {categoryLabels[category]}
                </button>
              ))}
            </div>

            <!-- Results Count -->
            <p class="text-sm text-muted">
              <span id="results-count">{regularPosts.length}</span> article(s) trouvé(s)
            </p>
          </div>

          <!-- Articles Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {regularPosts.map((post) => {
              const slug = post.id.replace('fr/', '');

              return (
                <article
                  data-post
                  data-title={post.data.title}
                  data-description={post.data.description}
                  data-category={post.data.category}
                  class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group"
                >
                  <a href={`/blog/${slug}`} class="block">
                    <!-- Image Placeholder -->
                    {post.data.image ? (
                      <div class="aspect-video bg-gradient-to-br from-primary/10 to-secondary/10 relative overflow-hidden">
                        <img
                          src={post.data.image}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                    ) : (
                      <div class="aspect-video bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center">
                        <svg class="w-16 h-16 text-primary/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      </div>
                    )}

                    <!-- Content -->
                    <div class="p-6">
                      <!-- Category Badge -->
                      <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-primary/10 text-primary border border-primary/20 mb-3">
                        {categoryLabels[post.data.category]}
                      </span>

                      <!-- Title -->
                      <h3 class="text-xl font-heading font-bold text-text mb-2 group-hover:text-primary transition-colors line-clamp-2">
                        {post.data.title}
                      </h3>

                      <!-- Description -->
                      <p class="text-sm text-text mb-4 line-clamp-3">
                        {post.data.description}
                      </p>

                      <!-- Meta -->
                      <div class="flex items-center justify-between text-xs text-muted">
                        <time>{formatDate(post.data.publishDate)}</time>
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          {calculateReadingTime(post.body)} min
                        </span>
                      </div>
                    </div>
                  </a>
                </article>
              );
            })}
          </div>

          <!-- No Results Message -->
          <div
            x-show="posts.filter(p => p.element.style.display !== 'none').length === 0"
            x-cloak
            class="text-center py-16"
          >
            <svg class="w-24 h-24 mx-auto mb-4 text-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-xl text-muted mb-2">Aucun article trouvé</p>
            <p class="text-sm text-subtle">Essayez de modifier votre recherche ou vos filtres</p>
          </div>
        </div>

        <!-- Sidebar (30%) -->
        <aside class="lg:col-span-1">
          <BlogSidebar lang={lang} />
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  [x-cloak] {
    display: none !important;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
