---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Helper for route paths
const route = (path: string) => lang === 'fr' ? `/${path}` : `/en/${path}`;
---

<footer class="bg-white border-t border-gray-100 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Single Row Layout - Desktop | Stacked - Mobile -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 lg:gap-0">

      <!-- Left: Logo -->
      <div class="flex flex-col lg:flex-row lg:items-center gap-4 lg:gap-8">
        <div class="flex items-center justify-center lg:justify-start">
          <img
            src="/vecia_logo_long_contour.png"
            alt="Vecia"
            class="h-8 w-auto hover:scale-105 transition-transform duration-200"
          />
        </div>
      </div>

      <!-- Center: Essential Links (Hidden on mobile) -->
      <nav class="hidden lg:flex items-center gap-8" aria-label="Footer navigation">
        <a href={route('privacy')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.privacy')}
        </a>
        <a href={route('terms')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.terms')}
        </a>
        <a href={route('cookies')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.cookies')}
        </a>
        <a href={route('ai-ethics')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.aiethics')}
        </a>
      </nav>

      <!-- Mobile Navigation (Visible on mobile only) -->
      <nav class="lg:hidden flex flex-wrap gap-4 justify-center" aria-label="Footer navigation mobile">
        <a href={route('privacy')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.privacy')}
        </a>
        <a href={route('terms')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.terms')}
        </a>
        <a href={route('cookies')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.cookies')}
        </a>
        <a href={route('ai-ethics')} class="text-sm font-medium text-gray-600 hover:text-primary transition-colors duration-200">
          {t('footer.legal.aiethics')}
        </a>
      </nav>

      <!-- Right: Social + Copyright -->
      <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
        <!-- Social Icons with micro-interactions -->
        <div class="flex items-center justify-center gap-3">
          <a
            href="https://linkedin.com/company/vecia"
            class="w-8 h-8 bg-gray-50 hover:bg-gradient-to-r hover:from-primary hover:to-secondary rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110 hover:shadow-[0_0_20px_rgba(91,139,255,0.4)] group"
            aria-label="Follow Vecia on LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-4 h-4 text-gray-600 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>

        <!-- Copyright with subtle styling -->
        <p class="text-xs text-gray-400 font-normal">
          {t('footer.copyright')}
        </p>
      </div>
    </div>
  </div>
</footer>
