---
/**
 * HugeIcon Component
 *
 * Renders Hugeicons using the official Hugeicons CDN font
 * Uses CSS classes for icon rendering
 *
 * @prop {string} name - Icon name (e.g., "target-01", "briefcase-01")
 * @prop {string} class - Tailwind CSS classes for styling
 *
 * Available icons:
 * - target-01: Sales/Goals icon
 * - briefcase-01: Business icon
 * - settings-02: Operations icon
 * - customer-support: Support icon
 * - megaphone-01: Marketing icon
 * - note-01: Meeting notes icon
 * - invoice-01: Invoice processing icon
 * - mail-01: Email icon
 * - cancel-circle: Error/problem icon
 * - checkmark-circle-02: Success/solution icon
 * - money-bag-01: ROI/money icon
 */

interface Props {
  name: string;
  class?: string;
}

const { name, class: className = '' } = Astro.props;

// Validate icon name
const validIcons = [
  'target-01',
  'briefcase-01',
  'settings-02',
  'customer-support',
  'megaphone-01',
  'note-01',
  'invoice-01',
  'mail-01',
  'cancel-circle',
  'checkmark-circle-02',
  'money-bag-01',
];

if (!validIcons.includes(name)) {
  console.warn(`[HugeIcon] Unknown icon name: "${name}". Available icons:`, validIcons);
}
---

<i class={`hgi-stroke hgi-${name} ${className}`} aria-hidden="true"></i>
