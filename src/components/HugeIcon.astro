---
/**
 * HugeIcon Component
 *
 * Renders Hugeicons using unicode characters
 * No runtime dependencies - all glyphs are hardcoded
 *
 * @prop {string} name - Icon name (e.g., "target-01", "briefcase-01")
 * @prop {string} class - Tailwind CSS classes for styling
 * @prop {string} style - Icon style (default: "stroke-rounded")
 *
 * Available icons:
 * - target-01: Sales/Goals icon
 * - briefcase-01: Business icon
 * - settings-02: Operations icon
 * - customer-support: Support icon
 * - megaphone-01: Marketing icon
 * - note-01: Meeting notes icon
 * - invoice-01: Invoice processing icon
 * - mail-01: Email icon
 * - cancel-circle: Error/problem icon
 * - checkmark-circle-02: Success/solution icon
 * - money-bag-01: ROI/money icon
 */

interface Props {
  name: string;
  class?: string;
  style?: string;
}

const { name, class: className = '', style = 'stroke-rounded' } = Astro.props;

// Icon unicode mappings (stroke-rounded style)
const iconGlyphs: Record<string, string> = {
  'target-01': '&#990909;',
  'briefcase-01': '&#984173;',
  'settings-02': '&#989899;',
  'customer-support': '&#985477;',
  'megaphone-01': '&#987957;',
  'note-01': '&#988579;',
  'invoice-01': '&#987133;',
  'mail-01': '&#987729;',
  'cancel-circle': '&#984513;',
  'checkmark-circle-02': '&#984827;',
  'money-bag-01': '&#988195;',
};

const glyph = iconGlyphs[name];

if (!glyph) {
  console.warn(`[HugeIcon] Unknown icon name: "${name}". Available icons:`, Object.keys(iconGlyphs));
}
---

{glyph ? (
  <span class={`hugeicon ${className}`} set:html={glyph} aria-hidden="true" />
) : (
  <span class={className} aria-hidden="true">?</span>
)}

<style>
  .hugeicon {
    display: inline-block;
    font-family: 'Hugeicons', sans-serif;
    font-style: normal;
    font-weight: normal;
    line-height: 1;
    vertical-align: middle;
  }
</style>
