const commentCount = lang === 'fr' ? `${comments.length} commentaire${comments.length > 1 ? 's' : ''}` : `${comments.length} comment${comments.length !== 1 ? 's' : ''}`;
---

{comments.length > 0 && (
  <section class="mt-16 mb-8">
    <div class="border-t border-gray-200 pt-8">
      <!-- Section Header -->
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-heading font-bold text-text">
          {sectionTitle}
        </h2>
        <span class="text-sm text-muted font-medium">
          {commentCount}
        </span>
      </div>

      <!-- Comments List -->
      <div class="space-y-6">
        {comments.map((comment) => (
          <div class="bg-gray-50 dark:bg-neutral-900/50 rounded-xl p-6 border border-gray-100 dark:border-neutral-800 hover:border-primary/30 transition-colors">
            <div class="flex items-start gap-4">
              <!-- Avatar (Colored Circle with Initials) -->
              <div class={`flex-shrink-0 w-12 h-12 rounded-full ${comment.color} flex items-center justify-center text-white font-semibold text-sm`}>
                {comment.initials}
              </div>

              <!-- Comment Content -->
              <div class="flex-1 min-w-0">
                <!-- Name & Date -->
                <div class="flex items-center gap-3 mb-2">
                  <span class="font-semibold text-text">
                    {comment.name}
                  </span>
                  <span class="text-xs text-subtle">
                    {comment.date}
                  </span>
                </div>

                <!-- Comment Text -->
                <p class="text-text leading-relaxed">
                  {comment.content}
                </p>
              </div>
            </div>
