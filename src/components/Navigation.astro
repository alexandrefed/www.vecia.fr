---
import type { Language } from '../i18n/ui';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

// Translation keys
import { ui } from '../i18n/ui';
const t = ui[lang];

// Determine URLs based on language
const homeUrl = lang === 'fr' ? '/' : '/en/';
const aboutUrl = lang === 'fr' ? '/about' : '/en/about';
const blogUrl = lang === 'fr' ? '/blog' : '/en/blog';
const contactUrl = lang === 'fr' ? '/contact' : '/en/contact';
const altLangUrl = lang === 'fr' ? '/en/' : '/';
const currentLangCode = lang === 'fr' ? t['nav.language.code.fr'] : t['nav.language.code.en'];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-background/10 backdrop-blur-md border-b border-gray-200/20 h-[70px]">
  <div class="w-full h-full px-8">
    <div class="flex items-center justify-between h-full">

      <!-- Logo -->
      <a href={homeUrl} class="flex items-center group">
        <!-- Desktop Logo -->
        <img
          src="/vecia_logo_long_contour.png"
          alt="Vecia Logo"
          class="h-10 w-auto hidden lg:block transition-transform group-hover:scale-105"
        />
        <!-- Mobile Logo (V icon) -->
        <img
          src="/vecia_favicon.png"
          alt="Vecia"
          class="h-10 w-auto lg:hidden transition-transform group-hover:scale-105"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-7">
        <a href={aboutUrl} class="text-base font-medium uppercase tracking-wide text-gray-700 hover:text-primary transition-colors font-heading">
          {t['nav.about']}
        </a>
        <a href={blogUrl} class="text-base font-medium uppercase tracking-wide text-gray-700 hover:text-primary transition-colors font-heading">
          {t['nav.blog']}
        </a>
        <a href={contactUrl} class="text-base font-medium uppercase tracking-wide text-gray-700 hover:text-primary transition-colors font-heading">
          {t['nav.contact']}
        </a>

        <!-- Language Switcher -->
        <div x-data="{ open: false }" class="relative">
          <button
            @click="open = !open"
            class="flex items-center gap-2 text-sm font-medium px-3 py-1 rounded-md text-gray-700 hover:text-primary transition-colors lowercase"
          >
            <span>{currentLangCode}</span>
            <svg
              class="w-4 h-4 transition-transform"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <!-- Dropdown -->
          <div
            x-show="open"
            @click.outside="open = false"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 transform scale-90"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-90"
            class="absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-gray-200 py-2"
            style="display: none;"
          >
            <a
              href={lang === 'fr' ? '/' : altLangUrl}
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors"
            >
              {t['nav.language.fr']}
            </a>
            <a
              href={lang === 'en' ? '/' : altLangUrl}
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors"
            >
              {t['nav.language.en']}
            </a>
          </div>
        </div>

        <!-- CTA Buttons -->
        <!-- Primary Button (Outlined) -->
        <a
          href="https://cal.com/vecia/consultation"
          target="_blank"
          class="px-5 py-2.5 text-base font-semibold border-2 border-primary/30 rounded-lg text-primary bg-white/10 hover:bg-primary hover:text-white hover:border-primary transition-all capitalize"
        >
          {t['nav.cta.book'].toLowerCase()}
        </a>
        <!-- Secondary Button (Gradient) -->
        <a
          href={lang === 'fr' ? '/commencer' : '/en/get-started'}
          class="px-6 py-2.5 text-base font-semibold rounded-lg text-white bg-gradient-to-r from-primary to-secondary hover:scale-105 hover:shadow-lg transition-all capitalize"
        >
          {t['nav.cta.start'].toLowerCase()}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        x-data="{ mobileOpen: false }"
        @click="mobileOpen = !mobileOpen"
        class="lg:hidden p-2.5 text-gray-700 hover:text-primary transition-colors"
      >
        <svg class="w-7 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      x-data="{ mobileOpen: false }"
      x-show="mobileOpen"
      @click.outside="mobileOpen = false"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 transform -translate-y-4"
      x-transition:enter-end="opacity-100 transform translate-y-0"
      class="lg:hidden mt-4 pb-4 border-t border-gray-200/20 pt-4"
      style="display: none;"
    >
      <div class="flex flex-col gap-4">
        <a href={aboutUrl} class="text-base font-medium uppercase tracking-wide text-gray-700 hover:text-primary transition-colors font-heading">
          {t['nav.about']}
        </a>
        <a href={blogUrl} class="text-base font-medium uppercase tracking-wide text-gray-700 hover:text-primary transition-colors font-heading">
          {t['nav.blog']}
        </a>
        <a href={contactUrl} class="text-base font-medium uppercase tracking-wide text-gray-700 hover:text-primary transition-colors font-heading">
          {t['nav.contact']}
        </a>

        <!-- Mobile Language Links -->
        <div class="flex gap-4 pt-2 border-t border-gray-200/20">
          <a href="/" class="text-sm text-gray-700 hover:text-primary transition-colors">
            {t['nav.language.fr']}
          </a>
          <a href="/en/" class="text-sm text-gray-700 hover:text-primary transition-colors">
            {t['nav.language.en']}
          </a>
        </div>

        <a
          href="https://cal.com/vecia/consultation"
          target="_blank"
          class="w-full px-5 py-2.5 text-base font-semibold border-2 border-primary/30 rounded-lg text-primary bg-white/10 hover:bg-primary hover:text-white hover:border-primary transition-all text-center capitalize"
        >
          {t['nav.cta.book'].toLowerCase()}
        </a>
        <a
          href={lang === 'fr' ? '/commencer' : '/en/get-started'}
          class="w-full px-6 py-2.5 text-base font-semibold rounded-lg text-white bg-gradient-to-r from-primary to-secondary hover:scale-105 hover:shadow-lg transition-all text-center capitalize"
        >
          {t['nav.cta.start'].toLowerCase()}
        </a>
      </div>
    </div>
  </div>
</nav>
