---
/**
 * Final CTA Component
 *
 * Implements 2025 CTA best practices:
 * - High contrast gradient background
 * - Clear, benefit-driven headline
 * - Two action buttons (primary + secondary)
 * - Mobile-responsive with large touch targets
 * - Centered layout with ample whitespace
 *
 * Links:
 * - Primary button: Cal.com booking page
 * - Secondary button: Blog section
 */

interface Props {
  lang: 'fr' | 'en';
}

const { lang } = Astro.props;

// Import translations and config
import { useTranslations } from '../i18n/utils';
import { config } from '../config';
const t = useTranslations(lang);
---

<section class="final-cta relative overflow-hidden py-20 bg-gradient-to-r from-secondary via-accent2 to-accent1">
  <div class="container mx-auto px-6 max-w-4xl text-center relative z-10">
    <!-- Headline -->
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-heading font-bold text-white mb-6">
      {t('finalCta.headline')}
    </h2>

    <!-- Body Text -->
    <p class="text-base md:text-lg lg:text-xl text-white max-w-3xl mx-auto mb-12">
      {t('finalCta.body')}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <!-- Primary CTA Button -->
      <a
        href={config.calcom.bookingUrl}
        target="_blank"
        rel="noopener noreferrer"
        data-track="book-call"
        data-location="final-cta"
        class="inline-block px-8 py-4 bg-white text-primary font-bold text-lg rounded-full hover:shadow-xl hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 min-w-[240px]"
      >
        {t('finalCta.button.primary')}
      </a>

      <!-- Secondary CTA Button -->
      <a
        href={lang === 'fr' ? '/blog' : '/en/blog'}
        class="inline-block px-8 py-4 border-2 border-white text-white font-bold text-lg rounded-full hover:bg-white/10 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 min-w-[240px]"
      >
        {t('finalCta.button.secondary')}
      </a>
    </div>
  </div>

  <!-- Decorative gradient overlay for depth -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black/10 pointer-events-none"></div>
</section>

<style>
  /* Enhanced hover states for better feedback */
  a:hover {
    transform: translateY(-2px);
  }

  a:active {
    transform: translateY(0);
  }

  /* Mobile text sizing handled by Tailwind responsive classes */
</style>
