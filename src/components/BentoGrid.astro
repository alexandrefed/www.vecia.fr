---
import type { Language } from '../i18n/ui';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

// Translation keys
import { ui } from '../i18n/ui';
const t = ui[lang];
---

<!-- Alpine.js is REQUIRED for counter animations -->
<section class="relative py-20 px-8">
  <div class="max-w-7xl mx-auto">

    <!-- Section Title (Outside Purple Background) -->
    <div class="mb-8 text-center">
      <h2 class="font-display text-4xl font-bold text-text mb-4">
        <span class="title-icon"></span>{t['journey.sectionTitle']}
      </h2>
    </div>

    <!-- Purple Bento Background Container -->
    <div class="bg-gradient-to-br from-secondary to-primary rounded-3xl p-8 md:p-12 shadow-2xl">

    <!-- 3-Row Bento Grid -->
    <div class="grid md:grid-cols-3 gap-6 md:gap-8">

      <!-- ============================================ -->
      <!-- ROW 1: Understanding + Roadmap -->
      <!-- ============================================ -->

      <!-- Row 1 - Left: Understanding (1/3) -->
      <div class="md:col-span-1 bg-white rounded-xl p-6 md:p-8 shadow-xl shadow-secondary/20 border border-white/30 hover:shadow-2xl hover:shadow-secondary/30 hover:scale-[1.02] hover:bg-white/95 transition-all duration-300">
        <!-- Icon + Title -->
        <div class="flex items-center gap-4 mb-4">
          <div class="w-14 h-14 bg-primary rounded-xl flex items-center justify-center flex-shrink-0">
            <i class="hgi-stroke hgi-target-03 text-3xl text-white"></i>
          </div>
          <h3 class="font-display text-xl md:text-2xl font-bold text-text">
            {t['journey.understanding.title']}
          </h3>
        </div>

        <!-- Content -->
        <p class="text-muted mb-4">
          {t['journey.understanding.content']}
        </p>

        <!-- Bullets -->
        <ul class="space-y-2 mb-6">
          <li class="flex items-start gap-2">
            <i class="hgi-stroke hgi-checkmark-circle-02 text-primary mt-1"></i>
            <span class="text-muted">{t['journey.understanding.bullet1']}</span>
          </li>
          <li class="flex items-start gap-2">
            <i class="hgi-stroke hgi-checkmark-circle-02 text-primary mt-1"></i>
            <span class="text-muted">{t['journey.understanding.bullet2']}</span>
          </li>
        </ul>

        <!-- CTA Button -->
        <div class="space-y-3">
          <a
            href="#contact"
            class="block w-full bg-gradient-to-r from-primary to-secondary text-white font-bold py-3 px-6 rounded-lg text-center hover:shadow-lg hover:shadow-primary/30 hover:scale-[1.02] transition-all duration-300"
          >
            {t['journey.understanding.ctaText']}
          </a>
          <p class="text-xs text-center text-subtle font-medium">
            {t['journey.understanding.freeLabel']}
          </p>
        </div>
      </div>

      <!-- Row 1 - Right: Roadmap with 4-Step Flow (2/3) -->
      <div class="md:col-span-2 bg-white rounded-xl p-6 md:p-8 shadow-xl shadow-secondary/20 border border-white/30 hover:shadow-2xl hover:shadow-secondary/30 hover:scale-[1.02] hover:bg-white/95 transition-all duration-300">
        <!-- Title -->
        <h3 class="font-display text-xl md:text-2xl font-bold text-text mb-2">
          {t['journey.roadmap.title']}
        </h3>
        <p class="text-muted mb-6">
          {t['journey.roadmap.subtitle']}
        </p>

        <!-- 4-Step Horizontal Flow UI -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 md:gap-4">

          <!-- Step 1: Strategic Workshop -->
          <div class="flex flex-col items-center text-center">
            <div class="relative mb-4">
              <!-- Numbered Gradient Circle with Icon -->
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center shadow-lg">
                <i class="hgi-stroke hgi-presentation-bar-chart-01 text-2xl text-white"></i>
              </div>
              <!-- Step Number Badge -->
              <div class="absolute -top-1 -right-1 w-6 h-6 bg-white rounded-full border-2 border-primary flex items-center justify-center">
                <span class="text-xs font-bold text-primary">1</span>
              </div>
              <!-- Connector Line (hidden on mobile) -->
              <div class="hidden md:block absolute top-1/2 left-full w-full h-0.5 bg-gradient-to-r from-primary/30 to-transparent -translate-y-1/2"></div>
            </div>
            <h4 class="font-display font-bold text-text mb-2">{t['journey.roadmap.step1Title']}</h4>
            <p class="text-sm text-muted mb-2">{t['journey.roadmap.step1Desc']}</p>
            <span id="workshopPrice" class="text-lg font-bold text-primary">
              {t['journey.pricing.tier1.price']}
            </span>
          </div>

          <!-- Step 2: Actionable Report -->
          <div class="flex flex-col items-center text-center">
            <div class="relative mb-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-secondary to-accent1 flex items-center justify-center shadow-lg">
                <i class="hgi-stroke hgi-document-validation text-2xl text-white"></i>
              </div>
              <div class="absolute -top-1 -right-1 w-6 h-6 bg-white rounded-full border-2 border-secondary flex items-center justify-center">
                <span class="text-xs font-bold text-secondary">2</span>
              </div>
              <div class="hidden md:block absolute top-1/2 left-full w-full h-0.5 bg-gradient-to-r from-secondary/30 to-transparent -translate-y-1/2"></div>
            </div>
            <h4 class="font-display font-bold text-text mb-2">{t['journey.roadmap.step2Title']}</h4>
            <p class="text-sm text-muted">{t['journey.roadmap.step2Desc']}</p>
          </div>

          <!-- Step 3: Implementation Plan -->
          <div class="flex flex-col items-center text-center">
            <div class="relative mb-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-accent1 to-accent2 flex items-center justify-center shadow-lg">
                <i class="hgi-stroke hgi-calendar-03 text-2xl text-white"></i>
              </div>
              <div class="absolute -top-1 -right-1 w-6 h-6 bg-white rounded-full border-2 border-accent1 flex items-center justify-center">
                <span class="text-xs font-bold text-accent1">3</span>
              </div>
              <div class="hidden md:block absolute top-1/2 left-full w-full h-0.5 bg-gradient-to-r from-accent1/30 to-transparent -translate-y-1/2"></div>
            </div>
            <h4 class="font-display font-bold text-text mb-2">{t['journey.roadmap.step3Title']}</h4>
            <p class="text-sm text-muted">{t['journey.roadmap.step3Desc']}</p>
          </div>

          <!-- Step 4: Delivery & Support -->
          <div class="flex flex-col items-center text-center">
            <div class="relative mb-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-accent2 to-primary flex items-center justify-center shadow-lg">
                <i class="hgi-stroke hgi-rocket-01 text-2xl text-white"></i>
              </div>
              <div class="absolute -top-1 -right-1 w-6 h-6 bg-white rounded-full border-2 border-accent2 flex items-center justify-center">
                <span class="text-xs font-bold text-accent2">4</span>
              </div>
            </div>
            <h4 class="font-display font-bold text-text mb-2">{t['journey.roadmap.step4Title']}</h4>
            <p class="text-sm text-muted">{t['journey.roadmap.step4Desc']}</p>
          </div>

        </div>
      </div>

      <!-- ============================================ -->
      <!-- ROW 2: Pricing Cards + Impact Metrics -->
      <!-- ============================================ -->

      <!-- Row 2 - Left: 3 Pricing Cards (2/3) -->
      <div class="md:col-span-2 bg-white rounded-xl p-6 md:p-8 shadow-xl shadow-secondary/20 border border-white/30 hover:shadow-2xl hover:shadow-secondary/30 hover:scale-[1.02] hover:bg-white/95 transition-all duration-300">
        <!-- Section Title + Currency Switcher -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
          <h3 class="font-display text-2xl font-bold text-text">
            {t['journey.pricing.sectionTitle']}
          </h3>

          <!-- Currency Switcher (GDPR-friendly: user control) -->
          <div class="flex items-center gap-2">
            <label for="currency-switcher" class="text-sm text-muted font-medium">
              {lang === 'fr' ? 'Devise:' : 'Currency:'}
            </label>
            <select
              id="currency-switcher"
              class="px-3 py-2 bg-gradient-to-r from-primary/10 to-secondary/10 border-2 border-primary/30 rounded-lg text-sm font-semibold text-text cursor-pointer hover:border-primary/50 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all duration-200"
            >
              <option value="EUR">ðŸ‡ªðŸ‡º EUR (â‚¬)</option>
              <option value="CHF">ðŸ‡¨ðŸ‡­ CHF</option>
              <option value="AED">ðŸ‡¦ðŸ‡ª AED</option>
              <option value="USD">ðŸ‡ºðŸ‡¸ USD ($)</option>
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">

          <!-- Pricing Card 1: Quick Wins -->
          <div class="relative bg-gradient-to-br from-primary/25 to-secondary/20 border-2 border-primary/30 rounded-xl p-6 hover:-translate-y-2 hover:shadow-2xl hover:border-primary/50 transition-all duration-300">
            <h4 class="font-display font-bold text-lg text-text mb-2">
              {t['journey.pricing.tier1.name']}
            </h4>
            <div class="mb-4">
              <span id="tier1Price" class="text-3xl font-bold text-primary">
                {t['journey.pricing.tier1.price']}
              </span>
            </div>
            <ul class="space-y-2">
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-primary mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier1.feature1']}</span>
              </li>
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-primary mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier1.feature2']}</span>
              </li>
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-primary mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier1.feature3']}</span>
              </li>
            </ul>
          </div>

          <!-- Pricing Card 2: Transformation (MOST POPULAR) -->
          <div class="relative bg-gradient-to-br from-secondary/30 to-accent1/25 border-2 border-secondary shadow-lg shadow-secondary/20 rounded-xl p-6 hover:-translate-y-2 hover:shadow-2xl hover:shadow-secondary/30 transition-all duration-300">
            <!-- Most Popular Badge -->
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 whitespace-nowrap">
              <span class="px-4 py-1 bg-gradient-to-r from-secondary to-accent1 text-white text-[10px] font-bold rounded-full shadow-lg uppercase tracking-wide">
                {t['journey.pricing.tier2.badge']}
              </span>
            </div>
            <h4 class="font-display font-bold text-lg text-text mb-2 mt-2">
              {t['journey.pricing.tier2.name']}
            </h4>
            <div class="mb-4">
              <span id="tier2Price" class="text-3xl font-bold text-secondary">
                {t['journey.pricing.tier2.price']}
              </span>
            </div>
            <ul class="space-y-2">
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-secondary mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier2.feature1']}</span>
              </li>
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-secondary mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier2.feature2']}</span>
              </li>
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-secondary mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier2.feature3']}</span>
              </li>
            </ul>
          </div>

          <!-- Pricing Card 3: Enterprise Acceleration -->
          <div class="relative bg-gradient-to-br from-accent1/25 to-accent2/20 border-2 border-accent1/30 rounded-xl p-6 hover:-translate-y-2 hover:shadow-2xl hover:border-accent1/50 transition-all duration-300">
            <h4 class="font-display font-bold text-lg text-text mb-2">
              {t['journey.pricing.tier3.name']}
            </h4>
            <div class="mb-4">
              <span id="tier3Price" class="text-3xl font-bold text-accent1">
                {t['journey.pricing.tier3.price']}
              </span>
            </div>
            <ul class="space-y-2">
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-accent1 mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier3.feature1']}</span>
              </li>
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-accent1 mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier3.feature2']}</span>
              </li>
              <li class="flex items-start gap-2 text-sm">
                <i class="hgi-stroke hgi-checkmark-circle-02 text-accent1 mt-0.5 flex-shrink-0"></i>
                <span class="text-muted">{t['journey.pricing.tier3.feature3']}</span>
              </li>
            </ul>
          </div>

        </div>
      </div>

      <!-- Row 2 - Right: Impact Metrics (1/3) -->
      <!-- Alpine component registered in client.ts (moved from inline due to Astro 5.16.x multi-line attribute bug) -->
      <div
        class="md:col-span-1 bg-white rounded-xl p-5 md:p-6 shadow-xl shadow-secondary/20 border border-white/30 hover:shadow-2xl hover:shadow-secondary/30 hover:scale-[1.02] hover:bg-white/95 transition-all duration-300"
        x-data="impactCounters"
      >
        <h4 class="font-display font-bold text-xl text-text mb-5 text-center">
          {t['journey.impact.title']}
        </h4>

        <!-- Metric 1: Cost Reduction -->
        <div class="mb-4 text-center">
          <div class="w-10 h-10 bg-gradient-to-r from-primary to-secondary rounded-full flex items-center justify-center mx-auto mb-2">
            <i class="hgi-stroke hgi-money-remove-02 text-lg text-white"></i>
          </div>
          <div>
            <span x-text="costReduction" class="text-3xl font-bold text-primary">0</span>
            <span class="text-3xl font-bold text-primary">%</span>
          </div>
          <p class="text-sm text-muted mt-1">{t['journey.impact.metric1Label']}</p>
        </div>

        <!-- Metric 2: Time Saved -->
        <div class="mb-4 text-center">
          <div class="w-10 h-10 bg-gradient-to-r from-secondary to-accent1 rounded-full flex items-center justify-center mx-auto mb-2">
            <i class="hgi-stroke hgi-clock-02 text-lg text-white"></i>
          </div>
          <div>
            <span x-text="timeSaved" class="text-3xl font-bold text-secondary">0</span>
            <span class="text-3xl font-bold text-secondary">h</span>
          </div>
          <p class="text-sm text-muted mt-1">{t['journey.impact.metric2Label']}</p>
        </div>

        <!-- Metric 3: Sales Growth -->
        <div class="text-center">
          <div class="w-10 h-10 bg-gradient-to-r from-accent1 to-accent2 rounded-full flex items-center justify-center mx-auto mb-2">
            <i class="hgi-stroke hgi-chart-up text-lg text-white"></i>
          </div>
          <div>
            <span class="text-3xl font-bold text-accent1">+</span>
            <span x-text="salesGrowth" class="text-3xl font-bold text-accent1">0</span>
            <span class="text-3xl font-bold text-accent1">%</span>
          </div>
          <p class="text-sm text-muted mt-1">{t['journey.impact.metric3Label']}</p>
        </div>
      </div>


    </div>

    </div>
  </div>
</section>
