---
interface Props {
  title: string;
  description?: string;
  lang?: 'fr' | 'en';
}

const { title, description = 'Vecia - AI Automation Agency', lang = 'fr' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="generator" content={Astro.generator}>

  <title>{title}</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/vecia_favicon.png">

  <!-- Global Styles (Tailwind v4 + Self-hosted Fonts) -->
  <link rel="stylesheet" href="/src/styles/global.css">

  <!-- Hugeicons Icon Font -->
  <link rel="stylesheet" href="https://use.hugeicons.com/font/icons.css">

  <!-- Alpine.js for interactive components (bundled via npm) -->
  <script src="/src/scripts/alpine.ts"></script>
</head>
<body class="font-body text-text bg-background">
  <slot />
</body>
</html>
