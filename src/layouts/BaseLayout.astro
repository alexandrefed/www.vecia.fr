---
interface Props {
  title: string;
  description?: string;
  lang?: 'fr' | 'en';
}

const { title, description = 'Vecia - AI Automation Agency', lang = 'fr' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="generator" content={Astro.generator}>

  <title>{title}</title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/vecia_favicon.png">

  <!-- Fonts: Space Grotesk & Inter from Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Global Styles (Tailwind v4) -->
  <link rel="stylesheet" href="/src/styles/global.css">

  <!-- Alpine.js for interactive components -->
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js" defer></script>
</head>
<body class="font-body text-text bg-background">
  <slot />
</body>
</html>
